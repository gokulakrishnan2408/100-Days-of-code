#include <iostream>
#include<iomanip>
using namespace std;

int main()
{  
     int t;
     float x,r;
     cin>>t;
     for(int i=0;i<t;i++)
     {
         cin>>x;
         if(x<1500)
         {
             r=x+(0.1*x)+(0.9*x);
            cout<<r<<"\n";
         }
         else
         {
             r=x+ 500+(0.98*x);
             cout<<fixed<<setprecision(2)<<r<<"\n";  
         }
     }
     
	return 0;
}
